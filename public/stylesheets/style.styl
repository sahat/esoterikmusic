turquoise = #00c5cd

body
  color: #fff
  background: url(../images/esoterik_bg.jpg)
  //background: url(https://raw.github.com/subtlepatterns/SubtlePatterns/master/rubber_grip.png)
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: turquoise

.navbar
  min-height: 40px
  border: 0
  box-shadow: 0 1px 1px rgba(0,0,0,0.1)

.navbar-brand
  font-size: 12px
  text-transform: uppercase
  font-family: "Francois One" , "Helvetica Neue", Arial, sans-serif
  padding: 10px 15px

.navbar-inverse .navbar-nav > li > a
  font-size: 12px
  padding-top: 10px
  padding-bottom: 10px
  line-height: 20px
  text-transform: uppercase
  font-family: "Francois One" , "Helvetica Neue", Arial, sans-serif
  &:hover
    background-color: turquoise

.navbar-inverse .navbar-nav > .active > a
  background-color: turquoise

.nivoSlider
  margin-bottom: 20px
  position: relative
  background: url(images/loading.gif) no-repeat 50% 50%

.nivoSlider img
  width: 100%

.nivoSlider a.nivo-imageLink
  position: absolute
  top: 0px
  left: 0px
  width: 100%
  height: 100%
  border: 0
  padding: 0
  margin: 0
  z-index: 6
  display: none

.nivo-caption
  position: absolute
  right: 0px
  bottom: 70px
  z-index: 8
  text-align: right

.nivo-caption p
  font-family: "Francois One" , "Helvetica Neue", Arial, "sans-serif"
  text-transform uppercase
  display: inline-block
  color: #fff
  font-size: 32px
  padding: 17px
  background-color: turquoise

.nivo-caption  a
  color: #fff !important
  display:inline !important


.nivo-caption a:hover
  color: #fff

.title
  margin-top: 0
  font-family: "Francois One" , "Helvetica Neue", Arial, sans-serif
  text-transform: uppercase

.well
  border: 0
  border-radius: 0
  background-color: #000;
  box-shadow: -2px 2px 5px rgba(0,0,0,0.4);

.headline
  margin-bottom: 20px

.headline-title
  font-family: "Francois One" , "Helvetica Neue", Arial, sans-serif
  text-transform: uppercase

.headline-subtitle
  margin: 5px 0 5px 0;
  font-size: 12px
  color: #777

.headline-body
  font-size: 12px
  color: #aaa